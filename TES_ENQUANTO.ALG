Algoritmo "tes_enquanto"

Var

   x, soma : inteiro

Inicio

      escreva ("Digite um número: ")
      leia (x)
      
      enquanto x<>0 faca
               soma <- soma + x
               escreva ("Digite outro número: ")
               leia (x)
      fimenquanto
      
      escreval ("SOMA: ", soma)
      

Fimalgoritmo